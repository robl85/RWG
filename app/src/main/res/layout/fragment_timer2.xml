<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="15sp"
        android:textColor="@color/teal_700"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textStyle="bold"

        android:text="( Work duration / Rest duration )" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/buttonTwenty"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_pressed"
            style="?android:attr/buttonBarButtonStyle"
            android:elevation="4dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="20 / 40" />

        <Button
            android:id="@+id/buttonThirty"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_pressed"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="30 / 30" />

        <Button
            android:id="@+id/buttonFortyFive"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_pressed"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="45 / 15" />

    </LinearLayout>

    <TextView
        android:id="@+id/selectDurationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginBottom="0dp"
        android:text="Select work / rest duration..."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#143F76"
        android:textColorHighlight="#AEC1BF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:visibility="visible"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/readyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginBottom="0dp"
        android:text="Ready"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#143F76"
        android:textColorHighlight="#AEC1BF"
        android:textSize="80sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/restWorkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:textSize="40sp" />

    <Button
        android:id="@+id/startStopButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/gradient_button_background"
        android:elevation="4dp"
        android:hapticFeedbackEnabled="true"
        android:padding="15dp"
        android:text="Start/Stop"
        android:textColor="#143F76"
        android:textSize="20sp" />


    <Button
        android:id="@+id/resetButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:elevation="4dp"
        android:textSize="20sp"
        android:textColor="#143F76"
        android:background="@drawable/gradient_button_background"
        android:text="Reset timer" />

</LinearLayout>
